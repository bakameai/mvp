# Telnyx Configuration (REQUIRED)
TELNYX_API_KEY=KEYxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx  # Get from Telnyx Mission Control Portal
TELNYX_PHONE_NUMBER=+1234567890  # Your Telnyx phone number with country code
TELNYX_PUBLIC_KEY=  # Optional: For webhook signature verification (recommended for production)

# OpenAI Configuration (REQUIRED - Keep existing)
OPENAIAPI=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx  # Your OpenAI API key

# Other Services (Keep existing if used)
DEEPGRAM_API_KEY=  # For speech transcription if needed
LLAMA_API_KEY=  # Alternative to OpenAI
NEWSAPI_KEY=  # For news module if used

# Database Configuration (Keep existing)
DATABASE_URL=postgresql://user:password@localhost/bakame_db
REDIS_URL=redis://localhost:6379/0

# Application Settings
APP_ENV=development  # or 'production'
DEBUG=true

# Webhook URL Configuration (for reference)
# Configure in Telnyx Portal: https://your-domain.com/telnyx/incoming